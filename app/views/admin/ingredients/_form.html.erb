<%= form_with(model: [:admin, ingredient], local: true, builder: ::FormBuilder) do |form| %>
  <div class="card mb-4">
    <div class="card-body">
      <% if ingredient.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2 class="h4"><%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

          <ul>
          <% ingredient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.rich_text_area :description, style: 'min-height: 188px' %>
          </div>
        </div>

          <div class="form-group">
            <%= form.label :images %>
            <div class="custom-file">
              <%= form.file_field :images, multiple: true, class: 'custom-file-input' %>
              <label class="custom-file-label" for="images">Choose images</label>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group mb-0">
        <% if ingredient.persisted? %>
          <div class="float-right">
            <%= link_to 'Destroy', admin_ingredient_path(ingredient), method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>

        <%= form.submit class: 'btn btn-primary' %>

        <% if ingredient.persisted? %>
          <%= link_to "Cancel", admin_ingredient_path(ingredient), class: "btn btn-link" %>
        <% else %>
          <%= link_to "Cancel", admin_ingredients_path, class: "btn btn-link" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
