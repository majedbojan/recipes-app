<div class="page-header flex-wrap flex-md-nowrap">
  <h1 class="h2">ingredients</h1>

  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Add New ingredient", new_admin_ingredient_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>

<%= search_form_for [:admin, @q], class: 'd-flex mb-3' do |f| %>
  <%= f.search_field :name_cont, placeholder: 'Search for ingredient', value: params.dig(:q, :name_cont), class: 'form-control mr-3' %>
  <%= f.submit 'Search', class: 'btn btn-primary', data: { disable_with: 'Searching...' } %>
<% end %>

<div class="card mb-3">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th><%= sort_link(@q, :name) %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @ingredients.each do |ingredient| %>
          <%= content_tag :tr, id: dom_id(ingredient), class: dom_class(ingredient) do %>
            <td><%= ingredient.name %></td>
            <td><%= link_to 'Show', admin_ingredient_path(ingredient) %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%== pagy_bootstrap_nav(@pagy) %>
