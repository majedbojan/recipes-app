<%= form_with(model: [:admin, recipe], local: true, builder: ::FormBuilder) do |form| %>
  <div class="card mb-4">
    <div class="card-body">
      <% if recipe.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2 class="h4"><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

          <ul>
          <% recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.rich_text_area :description, style: 'min-height: 188px' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :date %>
            <%= form.date_field :date, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :time, 'Recipe time' %>
            <%= form.select :time, recipe_time_options, {}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :capacity %>
            <%= form.number_field :capacity, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :price %>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">SAR</div>
              </div>
              <%= form.number_field :price, class: 'form-control', step: '1' %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, Recipe.statuses.keys, {}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :images %>
            <div class="custom-file">
              <%= form.file_field :images, multiple: true, class: 'custom-file-input' %>
              <label class="custom-file-label" for="images">Choose images</label>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group mb-0">
        <% if recipe.persisted? %>
          <div class="float-right">
            <%= link_to 'Destroy', admin_recipe_path(recipe), method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>

        <%= form.submit class: 'btn btn-primary' %>

        <% if recipe.persisted? %>
          <%= link_to "Cancel", admin_recipe_path(recipe), class: "btn btn-link" %>
        <% else %>
          <%= link_to "Cancel", admin_recipes_path, class: "btn btn-link" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
