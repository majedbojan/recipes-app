<div class="page-header flex-wrap flex-md-nowrap">
  <h1 class="h2">Show <%= singular_table_name %></h1>

  <div class="btn-toolbar mb-2 mb-md-0">
    <%%= link_to <%= index_helper %>_path, class: 'btn btn-light' do %>
      <i class="fa fa-angle-left"></i>
      All <%= plural_table_name.capitalize %>
    <%% end %>
    <%%= link_to "Edit", edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <dl class="row">
      <%- attributes.each do |attribute| -%>
      <dt class="col-sm-3"><%= attribute.human_name %>:</dt>
      <dd class="col-sm-9"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
      <%- end -%>
    </dl>
  </div>
</div>
